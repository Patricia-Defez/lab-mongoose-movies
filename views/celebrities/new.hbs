

{{#if celebrity.isNew }}
    <h2>New Celebrity</h2>
    <form action="/celebrities/new" method="post">
{{else}}
    <h2> Celebrity</h2>
    <form action="/celebrities/{{celebrity.id}}/edit" method="post">
{{/if}}

    <div>
        <label >Name:</label>
        <input type="text" name="name" value={{celebrity.name}}>
    </div>
   <div>
        <label >Occupation:</label>
        <input type="text" name="occupation" value={{celebrity.occupation}}>
    </div>
    <div>
        <label >Catch Phrase:</label>
        <input type="text" name="catchPhrase" value={{celebrity.catchPhrase}}>
    </div>

    {{#if celebrity.isNew }}
    <button type="submit" class="btn btn-primary">Add</button>
    {{else}}
    <button type="submit" class="btn btn-primary">Change</button>
    {{/if}}
</form>